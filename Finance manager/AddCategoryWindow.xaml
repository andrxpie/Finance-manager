<Window x:Class="Finance_manager.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_manager"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="250" Width="420">
    <Grid Background="AliceBlue">
        <!--#region Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->
        
        <TextBox Name="categoryName" Grid.RowSpan="2" Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Center" Background="LightGray" Margin="25"/>
        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Apply" Click="AddCatgeryBtn_Click"/>
    </Grid>
</Window>
